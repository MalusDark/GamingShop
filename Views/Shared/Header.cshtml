@* Header.cshtml *@
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/styles.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/styles.css" />
</head>
    <header>
        <div class="px-3 py-2 bg-dark text-white">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/" class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">
                        <img class="bi me-2" src="~/resources/Home.jpg" aria-label="Главная">
                    </a>

                    <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                        <li>
                            <a href="/" class="nav-link text-secondary">
                                Главная
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white">
                                Каталог
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white">
                                Личный кабинет
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white">
                                Корзина
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="px-3 py-2 border-bottom mb-3">
            <div class="container d-flex flex-row-reverse justify-content-left">
                <div class="text-end">
                    <button type="button" class="btn btn-light text-dark me-2">Вход</button>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("RegisterPage", "Authentification")'">Регистрация</button>
                </div>
            </div>
        </div>
    </header>